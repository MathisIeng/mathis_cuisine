{% extends 'admin/base.html.twig' %}

{% block metatitle %}

    Création de recette | Admin

{% endblock metatitle %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Liste des Recettes</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">Date de Création</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.id }}</td>
                    <td>{{ recipe.title }}</td>
                    <td>{{ recipe.createdAt | date('d-m-y') }}</td>
                    <td><img width="200" src="{{ asset('assets/uploads/' ~ recipe.image) }}"></td>
                    <td><a class="btn btn-danger btn-sm" href="{{ path('admin_recipe_delete', {'id' : recipe.id}) }}">Delete</a></td>
                    <td><a class="btn btn-primary btn-sm" href="{{ path('admin_recipe_update', {'id': recipe.id}) }}">Update</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
