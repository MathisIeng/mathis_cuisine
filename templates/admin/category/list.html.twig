{% extends 'admin/base.html.twig' %}

{% block metatitle %}

    Création de catégorie | Admin

{% endblock metatitle %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Liste des Catégories</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titre</th>
                <th scope="col">Date de Création</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.createdAt | date('d-m-y') }}</td>
                    <td><a class="btn btn-danger btn-sm" href="{{ path('admin_delete_category', {'id' : category.id}) }}">Delete</a></td>
                    <td><a class="btn btn-primary btn-sm" href="{{ path('admin_update_category', {'id': category.id}) }}">Update</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
